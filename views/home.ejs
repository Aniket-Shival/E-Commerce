    <body style="background-color:#0F3D3E;">

        <%- include('_navbr.ejs') %>
         
            <div class=" ">
                 
               <h1 class="mt-3" style="color:#F1F1F1" >Welcome   </h1>
        <% data.forEach(x=>{ %>

                    <div  class="card d-inline-block  zoom m-5" style="width:22rem ; height:28rem ; ">
                       

                        <img src="<%= x.pic %> " class="card-img-top " style="height:14rem" alt="...">
                        <div class="card-body" style="background-color: #E2DCC8;">
                            <h1 class="card-title ">
                               <a  style="text-decoration: none; color: black;" > <%= x.name %></a> 
                            
                            </h1>
                            <h3 class="card-text my-2">
                                <%= x.genre %>
                            </h3>
                            <h3 class="card-text my-2">â‚¹ <%= x.price %>
                            </h3>

                            <form method="post" action="cart">
                            
                                  <input type="number" name="quantity"  >
                                <input type="hidden" name="name" value="<%=x.name  %> ">
                                <input type="hidden" name="price" value="<%=x.price  %> ">
                                <input type="hidden" name="userphone" value="<%=user.userphone  %> ">
                                <input type="hidden" name="useremail" value="<%=user.useremail %> ">
                                <input type="hidden" name="username" value="<%=user.username %> ">
                                <input type="hidden" name="useraddress" value="<%=user.useraddress%> ">
                               
                                <button type="submit" class="btn btn-primary">Add to Cart</button>

                            </form>



                        </div>
                  
                    </div>
                    <% }) %>
            </div>
        
   
    </body>

