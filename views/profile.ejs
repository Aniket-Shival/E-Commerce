 <div class="container my-5">  
  <h1 class="my-4 " style="color:#F1F1F1">User Profile</h1>
  <form class="container " method="post" action="logout">
    <div class="mb-3">
        <label style="color:#E2DCC8 ;" class="form-label">Name</label>
        <input style="color:#000000" type="text" name="username" placeholder="<%= user.username %> " class="form-control" >
      </div>
      <div class="mb-3">
        <label style="color:#E2DCC8 ;" class="form-label">Address</label>
        <input type="text" name="useraddress" placeholder="<%= user.useraddress %> " class="form-control" >
      </div> 
      <div class="mb-3">
        <label style="color:#E2DCC8 ;" class="form-label">Phone Number</label>
        <input type="text" name="userphone" placeholder="<%= user.userphone %> " class="form-control" >
      </div>
    <div class="mb-3">
      <label style="color:#E2DCC8 ;" for="email" class="form-label">Email address</label>
      <input type="email" class="form-control" id="email" placeholder="<%= user.useremail %> " name="useremail" >
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <label style="color:#E2DCC8 ;" for="password" class="form-label">Password</label>
      <input type="password" class="form-control" placeholder="<%= user.userpassword %> " id="password" name="userpassword">
    </div>

    <button type="submit" class="btn btn-primary">Logout</button> 
    
  </form>

</div>



</body>

</html>